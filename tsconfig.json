{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "es2015",
      "es2017"
    ],
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    ".github/actions/**/*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}